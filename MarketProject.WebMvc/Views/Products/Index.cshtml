@model List<ProductResponseDto>

<a asp-action="Add" asp-controller="Products" class="btn btn-outline-success">Ekle</a>

<h2 class="text-center">Ürünler</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 p-2">
            <div class="card">
                <img style="width: 200px; height: 200px;" src="@item.ImageUrl" alt="" class="card-img-top">
                <div class="card-body p-2">
                    <h5 class="card-title">
                        @item.Name
                    </h5>
                    <p class="card-text"><strong>Kategori</strong>: @item.CategoryName</p>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text"><strong>Fiyat</strong>:@item.Price TL</p>
                    <p class="card-text"><strong>Stok Adedi</strong>:@item.Stock TL</p>

                    <div class="mt-3 d-flex justify-content-between">
                        <td><a asp-controller="Products" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning">Güncelle</a></td>

                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Silmek istediğinize emin misiniz?');">
                            <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    }

</div>