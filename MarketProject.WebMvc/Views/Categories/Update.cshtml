@model CategoryUpdateViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Kategori Güncelle</h2>

    <form asp-action="Update" method="post" class="w-50 mx-auto shadow p-4 rounded bg-light">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-bold">Kategori Adı</label>
            <input asp-for="Name" class="form-control" placeholder="Kategori adını giriniz..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>
