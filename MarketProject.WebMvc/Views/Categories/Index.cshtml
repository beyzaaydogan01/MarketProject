@model List<CategoryListViewModel>

@{
    ViewData["Title"] = "Kategori Listesi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-success">Kategori Listesi</h2>
        <a asp-action="Add" asp-controller="Categories" class="btn btn-success">+ Yeni Kategori</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <p class="text-muted">Hiç kategori bulunamadı.</p>
            }
            else
            {
                <table class="table table-striped table-hover">
                    <thead class="table-success">
                        <tr>
                            <th>Kategori Adı</th>
                            <th class="text-center">Güncelle</th>
                            <th class="text-center">Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td class="text-center">
                                    <a asp-controller="Categories" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        Güncelle
                                    </a>
                                </td>
                                <td class="text-center">
                                    <form asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Silmek istediğinize emin misiniz?');" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
